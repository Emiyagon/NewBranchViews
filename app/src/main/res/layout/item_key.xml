<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_margin="@dimen/x8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/x13"
            app:cardElevation="-1dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:textSize="@dimen/x44"
                    android:textColor="@color/textBlack"
                    android:text=""
                    android:includeFontPadding="false"
                    android:gravity="center" />
                <ImageView
                    android:id="@+id/img_del"
                    android:layout_width="@dimen/x66"
                    android:layout_height="@dimen/x49"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_baseline_backspace"

                    android:visibility="gone"
                    />
            </RelativeLayout>




        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>