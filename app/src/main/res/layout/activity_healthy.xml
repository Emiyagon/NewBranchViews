<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fitsSystemWindows="true"
        android:background="@color/blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="健康"
            android:textColor="@color/textBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <androidx.core.widget.NestedScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="输入身高(单位:cm)"
                            android:textColor="@color/textBlack"
                            android:textSize="18sp"

                            />

                        <TextView
                            android:id="@+id/tv_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="150"
                            android:textColor="@color/ucrop_color_statusbar"
                            android:textSize="18sp"
                            android:layout_margin="14dp"

                            />
                        <com.illyasr.mydempviews.view.ioswheel.LoopView
                            android:id="@+id/wleel_2"
                            android:layout_width="match_parent"

                            android:layout_height="200dp"
                            android:layout_margin="@dimen/x5"
                            app:awv_centerTextColor="@color/colorAccent"
                            app:awv_dividerLineColor="@color/textBlack"
                            app:awv_outerTextColor="@color/blue"
                            app:awv_textsize="20"
                            app:awv_itemsVisibleCount="6"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="输入体重(单位:kg)"
                            android:textColor="@color/textBlack"
                            android:textSize="18sp"

                            />

                        <TextView
                            android:id="@+id/tv_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="40"
                            android:textColor="@color/ucrop_color_statusbar"
                            android:textSize="18sp"
                            android:layout_margin="14dp"

                            />
                        <com.illyasr.mydempviews.view.ioswheel.LoopView
                            android:id="@+id/wleel_3"
                            android:layout_width="match_parent"

                            android:layout_height="200dp"
                            android:layout_margin="@dimen/x5"
                            app:awv_centerTextColor="@color/colorAccent"
                            app:awv_dividerLineColor="@color/textBlack"
                            app:awv_outerTextColor="@color/blue"
                            app:awv_textsize="20"
                            app:awv_itemsVisibleCount="6"
                            />

                    </LinearLayout>

                </LinearLayout>

                <com.coorchice.library.SuperTextView
                    android:id="@+id/stv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="您的 BMI 指数是 :17.7777778, 健康状况 : 偏瘦"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    app:stv_solid="#78C3ED"
                    app:stv_stroke_color="#5166ED"
                    app:stv_stroke_width="5dp"
                    app:stv_corner="10dp"
                    />
                <com.illyasr.mydempviews.view.ClockView2
                    android:layout_marginTop="20dp"
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>