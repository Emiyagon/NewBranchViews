        <declare-styleable name="RippleBackground">
            <attr name="rb_color" format="color" />
            <attr name="rb_strokeWidth" format="dimension"/>
            <attr name="rb_radius" format="dimension"/>
            <attr name="rb_duration" format="integer"/>
            <attr name="rb_rippleAmount" format="integer"/>
            <attr name="rb_scale" format="float"/>
            <attr name="rb_type" format="enum">
                <enum name="fillRipple" value="0"/>
                <enum name="strokeRipple" value="1"/>
            </attr>
        </declare-styleable>
    <!--
    圆形字体,不带计时器
    -->
    <declare-styleable name="CircleProgressbar">
<!--          里面的颜色-->
        <attr name="in_circle_color" format="color" />
<!--          圈的颜色  -->
        <attr name="line_circle_color" format="color" />
<!--        字体颜色-->
        <attr name="in_text_color" format="color" />
    </declare-styleable>

<!--
圆形进度条,带计时器
-->
    <declare-styleable name="CountDownView">
        <!--圆环颜色-->
        <attr name="ringColor" format="color" />
<!--        圆心颜色-->
        <attr name="innerColor" format="color" />
        <!-- 进度文本的字体大小 -->
        <attr name="progressTextSize" format="dimension" />
        <!-- 圆环宽度 -->
        <attr name="ringWidth" format="float" />
        <!--进度文本颜色-->
        <attr name="progressTextColor" format="color"/>
        <!--倒计时-->
        <attr name="countdownTime" format="integer"/>
    </declare-styleable>




    <!--  仿淘宝头条  -->
    <declare-styleable name="UPMarqueeView">

        <attr name="group_time" format="float" />

    </declare-styleable>
    <declare-styleable name="WaveView">
        <!--最大值 默认为20，数据为-20 ~ 20-->
        <attr name="max_value" format="integer" />
        <!--波形图折线单位宽度，通过修改该参数，控制横坐标的单位-->
        <attr name="wave_line_width" format="integer" />
        <!--波形图折线的线宽-->
        <attr name="wave_line_stroke_width" format="integer" />
        <!--波形图折线的颜色-->
        <attr name="wave_line_color" format="string" />
        <!--背景网格图的颜色-->
        <attr name="grid_line_color" format="string" />
        <!--背景颜色，默认为黑-->
        <attr name="wave_background" format="string"/>
        <!--背景网格是否可见-->
        <attr name="grid_visible" format="boolean" />
        <!--波形图绘制模式，常规和循环-->
        <attr name="draw_mode" format="enum">
            <enum name="normal" value="0" />
            <enum name="loop" value="1" />
        </attr>
    </declare-styleable>


    <!--    仿iOS滚轮  -->
    <declare-styleable name="LoopView">
<!--        字体大小  -->
        <attr name="awv_textsize" format="integer|dimension"/>
<!--        线条宽度-->
        <attr name="awv_lineSpace" format="float" />
        <!--        中间字体颜色-->
        <attr name="awv_centerTextColor" format="integer|reference|color" />
        <!--        选中之外字颜色-->
        <attr name="awv_outerTextColor" format="integer|reference|color" />
        <!--        线条颜色-->
        <attr name="awv_dividerLineColor" format="integer|reference|color"  />
<!--        可见数量 -->
        <attr name="awv_itemsVisibleCount" format="integer" />
<!--        是否无限循环 -->
        <attr name="awv_isLoop" format="boolean" />


        <attr name="awv_initialPosition" format="integer" />
        <attr name="awv_scaleX" format="float" />
    </declare-styleable>

    <declare-styleable name="ClockView">
        <!-- 仪表盘自定义属性 -->
        <attr name="color_dial_lower" format="color"/>
        <attr name="color_dial_middle" format="color"/>
        <attr name="color_dial_high" format="color"/>
        <attr name="text_size_dial" format="dimension"/>
        <attr name="stroke_width_dial" format="dimension"/>
        <attr name="radius_circle_dial" format="dimension"/>
        <attr name="text_title_dial" format="string"/>
        <attr name="text_title_size" format="dimension"/>
        <attr name="text_title_color" format="color"/>
        <attr name="text_size_value" format="dimension"/>
        <attr name="animator_play_time" format="integer"/>
    </declare-styleable>
</resources>